{
  "name": "paqt",
  "version": "1.0.0",
  "description": "A TypeScript CLI tool for reliable folder archiving with timestamp preservation",
  "main": "dist/cli.js",
  "bin": {
    "paqt": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build-executable": "bun build src/cli.ts --compile --outfile paqt",
    "dev": "tsx src/cli.ts",
    "alias": "npm run build && npm run start",
    "start": "node --stack-size=10000 dist/cli.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": ["cli", "archive", "zpaq", "compression", "backup", "timestamp"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "csv-parse": "^5.5.2",
    "csv-stringify": "^6.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 